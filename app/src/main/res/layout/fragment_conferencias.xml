<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConferenciasFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text4"
            style="@style/titulosSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="III Seminário em Cibersegurança e Cibercrime" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:src="@mipmap/scscc3" />
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image4"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/linhaSeparadoraOutras" />

        <TextView
            android:id="@+id/text1"
            style="@style/titulosSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="OpenDays 23/06/2017" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:src="@mipmap/open_day1" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image1"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/linhaSeparadoraOutras" />

        <TextView
            android:id="@+id/text2"
            style="@style/titulosSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Semana Engenharia Informática 2018" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:src="@mipmap/sei" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image2"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/linhaSeparadoraOutras" />

        <TextView
            android:id="@+id/text3"
            style="@style/titulosSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="II Seminário em Cibersegurança e Cibercrime" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:src="@mipmap/scscc2" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image3"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/linhaSeparadoraOutras" />

    </LinearLayout>
</ScrollView>